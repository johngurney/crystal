<table>
  <col width="20%">
  <col width="60%">
  <col width="20%">
  <tr>
    <td>
    </td>
    <td style="font-size: 30px; line-height:30px">
      This website uses cookies, that is small pieces of data stored on your computer to identify the computer and the user.<br/><br/> Do you consent to this?<br/><br/>
      <%= form_tag  cookie_consent_path, method: "post" do %>
      <table width=100% >
        <col width="10%">
        <col width="90%">
        <tr>
          <td style="font-size: 30px">
            Yes
          </td>
          <td>
            <%= check_box_tag "cookie_consent", "1", false, :style => "margin-top:-7px; width: 50px; height: 50px; outline: 6px solid", :onchange => "form.submit()" %>
          </td>
        </tr>

      </table>
      <% end %>

    </td>
    <td>
    </td>
  </tr>
</table>
